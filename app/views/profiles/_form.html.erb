
<%= form_with model: @profile do |f| %>
  <div>
    <%= f.label :username, "Username" %>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :location, "Location" %>
    <%= f.text_field :location %>
  </div>
  <div>
    <%= f.label :birthday, "Birthday" %>
    <%= f.date_select :birthday, { order: [:month, :day, :year], start_year: Date.current.year - 100, end_year: Date.current.year - 13 } %>
  </div>

  <div>
    <%= f.label :time_zone, "Time Zone" %>
    <%= f.time_zone_select(:time_zone, ActiveSupport::TimeZone.us_zones, default: "Eastern Time (US & Canada)") %>
  </div>

  <div>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %> 
  </div>
  <%= f.submit %>
<% end %>