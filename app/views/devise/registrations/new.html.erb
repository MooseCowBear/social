<div class="devise_form__wrapper">
  <h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "card" }) do |f| %>

    <div class="field">
      <div class="inline">
        <%= f.label :email %>
        <% f.object.errors.full_messages_for(:email).each do |msg| %>
          <span class="error"><%= msg %></span>
        <% end %>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <div class="inline">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <% f.object.errors.full_messages_for(:password).each do |msg| %>
          <span class="error"><%= msg %></span>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <div class="inline">
        <%= f.label :password_confirmation %>
        <% f.object.errors.full_messages_for(:password_confirmation).each do |msg| %>
          <span class="error"><%= msg %></span>
        <% end %>
      </div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
