<%= form_with model: [commentable, comment], html: {id: dom_id_for_records(commentable, comment), class: "form"} do |f| %>
  <% if f.object.errors.any? %>
    <div>
      <% f.object.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>
  <%= f.label :body, "Comment: " %>
  <%= f.text_area :body %>
  <%= f.submit %>
<% end %>