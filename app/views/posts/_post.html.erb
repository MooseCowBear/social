<div class="post-card">
  <div class="header post">
    <div>
      <h2><%= link_to post.title, post_path(post) %></h2>
      <p><%= display_name(post.user) %><p>
    </div>
    <%= post.created_at %>
  </div>
  <div class="post-image">
    <%= image_tag post.image if post.image.attached? %>
  </div>
  <div class="post-body">
    <%= post.body %>
  </div>

  <% if post.user == current_user %>
    <%= link_to "Edit Post", edit_post_path %>
    <%= link_to "Delete", post_path(post), data: {
                              turbo_method: :delete,
                              turbo_confirm: "Are you sure?"
                            } %>
  <% end %>
</div>

