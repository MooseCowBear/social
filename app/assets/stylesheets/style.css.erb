}

.sidebar__content img { /* NEED TO TEST THIS */
  height: 30px;
  width: 30px;
  padding: 1rem;
  border-radius: 50%;
}

.sidebar__content .card.profile {
  gap: 0.5rem;
}

.people__wrapper {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.posts__wrapper {
  grid-column: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: space-between;
  gap: 1rem;
}

.profile_show__wrapper {
  margin-top: 1rem;
  padding: 1rem 2rem;
  border-radius: var(--radius);
}

.preserve_spacing {
  /*white-space: pre-wrap;*/
}

.no_avatar {
  height: 30px;
  width: 30px;
  padding: 1rem;
  border-radius: 50%;
