.comment-card__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

ul {
  list-style-type: none;
}

.comments--main {
  padding: 0;
}

.comments.header {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-top: 1rem;
}

.clickable:hover {
  cursor: pointer;
}

.primary {
  color: var(--text);
}

.login__header {
  display: flex;
  justify-content: space-between;
  align-items: last baseline; 
}

select {
  appearance: none;
  background-color: transparent;
  border: none;
  padding: 0 1em 0 0;
  margin: 0;
  width: 100%;
  font-family: inherit;
  font-size: inherit;
  cursor: inherit;
  line-height: inherit;
  outline: none;
  color: inherit;
}

.select {
  width: 100%;
  min-width: 15ch;
}

.select, .datetime > select {
  border: 1px solid var(--gradient-two);
  border-radius: 0.25em;
  padding: 0.25em 0.5em;
  font-size: 1rem;
  cursor: pointer;
  line-height: 1.1;
  background-color: transparent;
  display: grid;
  grid-template-areas: "select";
  align-items: center;
  position: relative;
}

.datetime {
  display: flex;
  gap: 0.5rem;
}

.datetime > select {
  background-image: url(<%= asset_path 'triangle-small-down.svg' %>);
  background-repeat: no-repeat;
  background-position: right;
}

.select::after, .datetime > select::after {
  content: "";
  width: 0.8em;
  height: 0.5em;
  background-color: var(--gradient-two);
  clip-path: polygon(100% 0%, 0 0%, 50% 100%);
  justify-self: end;
}

select,
.select:after {
  grid-area: select;
}

select:focus + .focus {
  position: absolute;
  top: -1px;
  left: -1px;
  right: -1px;
  bottom: -1px;
  border: 2px solid var(--select-focus);
  border-radius: inherit;
}

select option {
  background: var(--divider-200);
  color: var(--text);
}

.user_search {
  display: flex;
  gap: 0.5rem;
  align-items: end;
  padding: 0.5rem 0;
}

.user_search label {
  text-transform: lowercase;
}

.magnify {
  background-color: var(--background-card);
  border-radius: var(--radius);
  padding: 0.5rem 1rem;
}

.magnify:hover, .magnify:focus {
  background-color: var(--gradient-three);
}

.notify__wrapper {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  list-style: inside;
  padding-left: 0;
}

.notify {
  margin: 0;
  padding: 1rem;
  background-color: var(--background-card);
  border-radius: var(--radius);
}

.no-notifications {
  margin-top: 0.5rem;
}

/* for the stimulus controller */
.hidden {
  display: none;
}

@media only screen and (max-width: 620px) {
  .user_show__main {
    flex-direction: column;
  }
}
@media only screen and (max-width: 500px) {
  .greeting {
    flex-direction: column;
    align-items: start;
  }
  .posts__wrapper{
    max-height: 1000px;
    overflow: auto;
  }
  .card {
    max-width: 98vw;
  }
}
