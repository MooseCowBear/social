  align-items: center;
  gap: 1rem;
}

.user_show__sidebar {
  min-width: 280px;
  display: grid;
  grid-template-columns: auto;
  grid-template-rows: 1fr 1fr;
  gap: 1rem;
  max-height: 80vh;

  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 0;
}

.sidebar__content {
  border-radius: var(--radius);
  display: flex;
  flex-direction: column;
  overflow: auto;
  padding: 1rem;
}

.sidebar__content > h3 {
