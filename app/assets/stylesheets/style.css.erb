  display: flex;
  align-items: center;
  justify-content: center;
}

.no_avatar.profile {
  /* align-self: center;  or leave as start? */
}

.initial {
  font-weight: 600;
  font-family: "Raleway", serif;
  font-size: 1rem;
  text-transform: lowercase;
  color: var(--gradient-one);
}

.page__wrapper {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.icon {
  width: 1.5rem;
}

.notification__header {
  display: flex;
  flex-direction: column;
  align-items: start;
}

.notification__wrapper {
  display: flex;
  gap: 0.5rem;
}

.row.card {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
